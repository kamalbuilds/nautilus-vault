{
  "name": "walrus-security-suite",
  "version": "1.0.0",
  "description": "Comprehensive security and privacy suite for Walrus ecosystem",
  "main": "src/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && npm run build:contracts",
    "build:contracts": "sui move build",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node src/index.js",
    "demo": "node src/demo/security-demo.js"
  },
  "dependencies": {
    "@mysten/sui.js": "^0.50.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "rate-limiter-flexible": "^3.0.1",
    "winston": "^3.10.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "uuid": "^9.0.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.5.0",
    "@types/express": "^4.17.17",
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/uuid": "^9.0.2",
    "@types/jest": "^29.5.4",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "jest": "^29.6.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  },
  "keywords": [
    "walrus",
    "security",
    "privacy",
    "zero-knowledge",
    "blockchain",
    "sui",
    "data-protection"
  ],
  "author": "Walrus Security Team",
  "license": "MIT",
  "directories": {
    "test": "tests"
  },
  "type": "module"
}
